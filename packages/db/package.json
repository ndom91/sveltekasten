{
  "name": "@briefkasten/db",
  "version": "0.0.1",
  "description": "Briefkasten Prisma Module",
  "author": "ndom91 <yo@ndo.dev> (https://ndo.dev/)",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "db:push": "pnpm exec prisma db push",
    "db:migrate": "pnpm exec prisma migrate dev",
    "db:studio": "pnpm exec prisma studio",
    "db:generate": "pnpm exec prisma generate",
    "postinstally": "pnpm exec prisma generate"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "require": "./dist/zod-prisma/index.js",
      "import": "./dist/zod-prisma/index.js",
      "types": "./dist/zod-prisma/index.d.ts"
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.28",
    "prisma": "5.11.0",
    "zod-prisma-types": "^3.1.6"
  },
  "dependencies": {
    "@prisma/client": "5.11.0",
    "zod": "^3.21.1"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "singleQuote": false
  }
}
