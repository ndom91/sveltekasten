{
  "name": "@briefkasten/db",
  "version": "0.0.1",
  "description": "Briefkasten Prisma Module",
  "author": "ndom91 <yo@ndo.dev> (https://ndo.dev/)",
  "license": "MIT",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "db:push": "pnpm exec prisma db push",
    "db:migrate": "pnpm exec prisma migrate dev",
    "db:studio": "pnpm exec prisma studio",
    "db:generate": "pnpm exec prisma generate",
    "postinstall": "pnpm exec prisma generate"
  },
  "types": "./index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "main": "./dist/index.js"
    },
    "./types": {
      "import": "./dist/types/zod-prisma/index.js",
      "main": "./dist/types/zod-prisma/index.js"
    }
  },
  "devDependencies": {
    "prisma": "5.11.0",
    "zod": "^3.21.1",
    "zod-prisma-types": "^3.1.6"
  },
  "dependencies": {
    "@prisma/client": "5.11.0"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "singleQuote": false
  }
}
