{
  "name": "briefkasten-svelte",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "db:push": "pnpm dlx prisma db push",
    "db:migrate": "pnpm dlx prisma migrate dev",
    "db:studio": "pnpm dlx prisma studio",
    "db:generate": "pnpm dlx prisma generate",
    "postinstall": "pnpm dlx prisma generate"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "3.1.1",
    "@sveltejs/adapter-vercel": "^5.1.0",
    "@sveltejs/kit": "2.5.1",
    "@sveltejs/package": "2.2.7",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/dompurify": "^3.0.5",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "7.0.2",
    "@typescript-eslint/parser": "7.0.2",
    "@unlazy/svelte": "^0.11.1",
    "autoprefixer": "^10.4.17",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-svelte": "2.35.1",
    "open-props": "^1.6.19",
    "postcss": "^8.4.35",
    "postcss-nesting": "^12.0.3",
    "prettier": "3.2.5",
    "prettier-plugin-svelte": "3.2.1",
    "prisma": "5.10.2",
    "svelte": "5.0.0-next.64",
    "svelte-check": "3.6.4",
    "svelte-headless-table": "^0.18.2",
    "tailwindcss": "^3.4.1",
    "tslib": "2.6.2",
    "typescript": "5.3.3",
    "vite": "5.1.4"
  },
  "type": "module",
  "dependencies": {
    "@auth/prisma-adapter": "^1.4.0",
    "@auth/sveltekit": "^0.13.0",
    "@formkit/tempo": "^0.0.11",
    "@prisma/client": "5.10.2",
    "@xenova/transformers": "^2.15.1",
    "bits-ui": "^0.18.2",
    "clsx": "^2.1.0",
    "cmdk-sv": "^0.0.13",
    "dompurify": "^3.0.9",
    "formsnap": "^0.5.0",
    "metascraper": "^5.44.0",
    "metascraper-author": "^5.44.0",
    "metascraper-clearbit": "^5.44.0",
    "metascraper-date": "^5.44.0",
    "metascraper-description": "^5.44.0",
    "metascraper-feed": "^5.44.0",
    "metascraper-image": "^5.44.0",
    "metascraper-lang": "^5.44.0",
    "metascraper-logo": "^5.44.0",
    "metascraper-logo-favicon": "^5.44.0",
    "metascraper-publisher": "^5.44.0",
    "metascraper-readability": "^5.44.0",
    "metascraper-title": "^5.44.0",
    "metascraper-url": "^5.44.0",
    "mode-watcher": "^0.2.1",
    "nodemailer": "^6.9.10",
    "p-debounce": "^4.0.0",
    "svelte-french-toast": "^1.2.0",
    "svelte-sonner": "^0.3.18",
    "sveltekit-superforms": "^2.6.1",
    "tailwind-merge": "^2.2.1",
    "tailwind-variants": "^0.2.0",
    "thumbhash": "^0.1.1",
    "ws": "^8.16.0",
    "zod": "^3.22.4",
    "zod-prisma-types": "^3.1.6"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest",
      "extraFileExtensions": [
        ".svelte"
      ]
    },
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "parser": "svelte-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser"
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "singleQuote": false,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  }
}
