{
  "name": "sveltekasten-web",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite dev --port 3000",
    "dev:bun": "bunx --bun vite dev --port 3000",
    "clean": "rm -rf build || true",
    "build:bun": "bun clean && vite build",
    "build": "pnpm clean && vite build && pnpm copy:partytown",
    "start": "node build/index.js",
    "start:bun": "bun run build/index.js",
    "preview": "vite preview",
    "format": "prettier --write",
    "test:e2e": "playwright test",
    "copy:partytown": "pnpm exec partytown copylib build/client/~partytown",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate"
  },
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@sveltejs/adapter-auto": "3.2.0",
    "@sveltejs/adapter-node": "^5.0.1",
    "@sveltejs/kit": "2.5.5",
    "@sveltejs/package": "2.3.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.12",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.12.2",
    "@types/ws": "^8.5.10",
    "autoprefixer": "^10.4.19",
    "eslint-plugin-svelte": "2.35.1",
    "open-props": "^1.6.21",
    "postcss": "^8.4.38",
    "postcss-nesting": "^12.1.1",
    "prettier-plugin-svelte": "3.2.2",
    "prisma": "5.11.0",
    "svelte": "5.0.0-next.90",
    "svelte-adapter-bun": "^0.5.2",
    "svelte-check": "3.6.8",
    "svelte-headless-table": "^0.18.2",
    "tailwindcss": "^3.4.3",
    "typescript-svelte-plugin": "^0.3.37"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.5.2",
    "@auth/sveltekit": "^0.14.2",
    "@builder.io/partytown": "^0.10.1",
    "@formkit/tempo": "^0.0.19",
    "@prisma/client": "5.11.0",
    "@xenova/transformers": "^2.16.1",
    "bits-ui": "^0.21.1",
    "clsx": "^2.1.0",
    "cmdk-sv": "^0.0.17",
    "dompurify": "^3.0.11",
    "formsnap": "^1.0.0",
    "isomorphic-dompurify": "^2.6.0",
    "metascraper": "^5.45.3",
    "metascraper-author": "^5.45.0",
    "metascraper-clearbit": "^5.45.0",
    "metascraper-date": "^5.45.0",
    "metascraper-description": "^5.45.0",
    "metascraper-feed": "^5.45.0",
    "metascraper-image": "^5.45.0",
    "metascraper-lang": "^5.45.0",
    "metascraper-logo": "^5.45.0",
    "metascraper-logo-favicon": "^5.45.2",
    "metascraper-publisher": "^5.45.0",
    "metascraper-readability": "^5.45.0",
    "metascraper-title": "^5.45.0",
    "metascraper-url": "^5.45.0",
    "mode-watcher": "^0.3.0",
    "nodemailer": "^6.9.13",
    "ofetch": "^1.3.4",
    "p-debounce": "^4.0.0",
    "sharp": "^0.33.3",
    "svelte-french-toast": "^1.2.0",
    "svelte-infinite": "^0.3.0",
    "svelte-sonner": "^0.3.20",
    "sveltekit-superforms": "^2.12.2",
    "tailwind-merge": "^2.2.2",
    "tailwind-variants": "^0.2.1",
    "thumbhash": "^0.1.1",
    "ws": "^8.16.0",
    "zod": "^3.22.4",
    "zod-prisma-types": "^3.1.6"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest",
      "extraFileExtensions": [
        ".svelte"
      ]
    },
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "parser": "svelte-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser"
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "singleQuote": false,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  }
}
