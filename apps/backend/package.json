{
  "name": "sveltekasten-backend",
  "version": "0.0.1",
  "license": "MIT",
  "main": "build/index.js",
  "author": "ndom91 <yo@ndo.dev>",
  "scripts": {
    "build": "rm -rf dist && node esbuild.mjs",
    "start": "node build",
    "dev": "tsx watch src",
    "format": "prettier --write src",
    "lint": "prettier --check src && eslint --ignore-path .gitignore .",
    "ci": "pnpm format && pnpm lint"
  },
  "dependencies": {
    "@briefkasten/db": "workspace:*",
    "@fastify/autoload": "^5.8.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/sensible": "^5.5.0",
    "@panva/hkdf": "^1.1.1",
    "croner": "^8.0.0",
    "fastify": "4.25.2",
    "fastify-plugin": "^4.5.1",
    "fastq": "^1.16.0",
    "jose": "^5.2.0",
    "rss-parser": "^3.13.0",
    "zod": "^3.21.1"
  },
  "devDependencies": {
    "@types/node": "20.10.6",
    "@types/xml2js": "^0.4.14",
    "esbuild": "^0.19.11",
    "eslint-plugin-prettier": "^5.1.3",
    "tiny-glob": "^0.2.9",
    "tsx": "^4.7.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "printWidth": 120
  }
}
