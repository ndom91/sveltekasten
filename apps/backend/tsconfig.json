{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,

    "lib": [
      "es2022"
    ],
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,

    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
  }
  "include": [
    "src/**/*.ts"
  ],
}
