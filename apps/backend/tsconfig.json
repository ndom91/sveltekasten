{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,

    "lib": [
      "es2022",
      "dom"
    ],
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,

    "resolveJsonModule": true,
    "isolatedModules": true,

    "types": [
      "node"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}
